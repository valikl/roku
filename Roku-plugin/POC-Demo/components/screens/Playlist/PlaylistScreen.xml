<!--
    node that renders details screen 
    handles start of video playback
 -->
<component name="PlaylistScreen" extends="Group" initialFocus="Buttons" xsi:noNamespaceSchemaLocation="http://rokudev.roku.com/rokudev/schema/RokuSceneGraph.xsd">
    
    <interface>
        <!-- Button press handler -->
        <field id="itemSelected" type="integer" alwaysnotify="true" alias="Buttons.itemSelected" onChange="onItemSelected" />

        <!-- Playback flag -->
        <field id="videoPlayerVisible" type="bool" alwaysnotify="true" alias="VideoPlayer.visible"  onChange="onVideoVisibleChange" />

        <!-- Content fields -->
        <field id="content" type="node" alwaysnotify="true" onChange="OnContentChange" />
        
        <field id="IsOptionsLabelVisible" type="bool" alias="Optionslabel.visible"/>
    </interface>
    
    <!-- main handler -->
    <script type="text/brightscript" uri="pkg:/components/screens/Playlist/PlaylistScreen.brs" />
    
    <children>

        <!--Background poster.-->
        <Poster
            id="Background"
            width="1280"
            height="720"
            />
        <Rectangle
        	id = "Shade"
            width="1280"
            height="720"
            color="0x000000"
            opacity="0.6"
            />

        <!--Control buttons.-->
        <LabelList
            id="Buttons"
            translation="[800,120]"
            color="0xFF000080"
            focusedColor="0x333333FF"
            numRows="5"
            vertFocusAnimationStyle="floatingFocus"
            itemSize="[250, 55]"
            />

        <!--Black hud at bottom of the Details Screen.-->
        <Rectangle
            id="testRectangle"
            color="0x000000"
            width="1280"
            height="251"
            translation="[0, 462]"
            opacity="0.8"
             />

        <!--Item description.-->
        <Description 
            id="Description"
            translation="[430, 475]"
            itemSpacings="[7, 16]"
            />

        <!--Item poster.-->
        <Poster
            id="Poster"
            translation="[60, 495]"
            width="241"
            height="158"
            />

        <!-- Overhang -->
        <Group
            id="Overhang">
			<Poster
				id="PosterOverhang"
				translation="[128, 72]"
				uri="pkg:/images/logo.png"
				width="480"
				height="79" />
	       <Group 
	       	id="Optionslabel">
	       <Label 
	           translation="[726, 58]"
	           width="400"
	           horizAlign="right" 
	           text="Search"/>
	       
	       <Poster id="OptionsIcon"
	           blendColor="#06d5e1"
	           enableColorBlending="false"
	           translation="[1139, 53]"
	           width="24"
	           height="24" 
	           uri="pkg:/images/options.png"/>
	       </Group>    
        </Group> 


		<RowList
			id="PlaylistItems"
			focusBitmapUri="pkg:/images/focus_grid.9.png"
			translation="[128, 500]"
			itemSize="[1327, 203]"
			itemSpacing="[0, 37]"
			numRows="1"
			focusXOffset="[0]"
			rowFocusAnimationStyle="fixedFocusWrap"
			rowItemSize="[[241, 158],[158,158]]"
			rowItemSpacing="[[20, 0]]"
			showRowLabel="true"
			showRowCounter="true"
			rowLabelOffset="[[0,16]]" />
        <!--Playback node.-->
        <Video
            id="VideoPlayer"
            visible="false"
            translation="[0, 0]"
            width="1280"
            height="720"/>

    </children> 
</component>